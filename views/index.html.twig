<!DOCTYPE html>
<html>

  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Anton" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet" type="text/css">
    <meta charset="utf-8">
    <title>MANY STORES to MANY BRANDS</title>
  </head>

  <body>

    <div class="jumbotron" id="jumbotron">

      <h1>stores</h1>
      <a href="/create_store"><button class="btn btn-xs btn-default">add store</button></a>

      {% for store in stores %}

        <p><a href="/store/{{store.getId}}">{{store.getName}}</a>

        <form action="/store/{{store.getId}}/delete" method="post">
          <input name="_method" type="hidden" value="delete">
          <button type="submit" class="btn btn-xs btn-default">remove store</button>
        </form></p>

      {% endfor %}
      <form action="/clear_stores" method="post">
        <input name="_method" type="hidden" value="delete">
        <a href="/"><button class="btn btn-xs btn-danger" type="submit">remove all stores</button></a>
      </form>
      <hr>
      <hr>

      <h1>brands</h1>
      </form>
      <br><br>
      <a href="/create_brand"><button class="btn btn-xs btn-default">add brand</button></a>

      {% for brand in brands %}
      <p><a href="/brand/{{brand.getId}}">{{brand.getName}}</a></p>
      {% endfor %}
      <form action="/clear_brands" method="post">
        <input name="_method" type="hidden" value="delete">
        <a href="/"><button class="btn btn-xs btn-danger" type="submit">remove all brands</button></a>
      </form>
      <hr>
      <hr>

      <a href="/"><button type="button" class="btn btn-xs btn-default" id="home">return</button></a>

    </body>
  </html>
